<?xml version="1.0" encoding="utf-8"?>

<com.rmj.Sunshine.custom.utils.buttons.ImageTileButton xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical">
    <ImageView
            android:id="@+id/image_tile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:id="@+id/image_tile_text"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/image_tile_image"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium" />

</com.rmj.Sunshine.custom.utils.buttons.ImageTileButton>